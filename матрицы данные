using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using matrix;

int n = Convert.ToInt32(Console.ReadLine());
int m = Convert.ToInt32(Console.ReadLine());
Console.WriteLine("Матрица 1:");
Matrix matr1 = new Matrix(2,2);
matr1.show();
Console.WriteLine("Матрица 2:");
Matrix matr2 = new Matrix(2,2);
matr2.show();
Console.WriteLine("Сложение:");
Matrix matr3 = matr1 + matr2;
matr3.show();
Console.WriteLine("Разность:");
Matrix matr4 = matr1 - matr2;
matr4.show();
Console.WriteLine("Умножение на скаляр:");
Matrix matr5 = matr1 * 5;
matr5.show();
Matrix matr6 = 5 * matr1;
matr5.show();
Console.WriteLine("Умножение матриц:");
Matrix matr7 = matr1 * matr2;
matr7.show();
Console.WriteLine("Матрица 3:");
Matrix matri = new Matrix(3, 2);
matri.show();
Console.WriteLine("Транспонирование:");
matri = matri.transpose();
matri.show();
Console.WriteLine("Вывод элемента:");
Console.WriteLine(matri[1, 1]);
Console.WriteLine("Квадратная матрица:");
SquareMatrix sqmatr1 = new SquareMatrix(n);
sqmatr1.show();
Console.WriteLine("Определитель:");
Console.WriteLine(sqmatr1.det());
Console.WriteLine("Транспонирование:");
SquareMatrix sq = sqmatr1.transpose();
sq.show();
